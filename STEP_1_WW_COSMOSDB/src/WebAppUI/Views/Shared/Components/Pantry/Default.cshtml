@using CnAppForAzureDev.Managers
@model CnAppForAzureDev.ViewComponentModels.PantryViewComponentModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var industry = (IIndustry)ViewData["Industry"];
}

<a class="font-weight-bold nav-link waves-effect waves-light" asp-controller="Pantry" asp-action="Index">
    <span class="badge badge-pill wg-green">@Model.ItemCount</span>
    <i class="fa fa-cutlery wg-black-text" aria-hidden="true"></i>
    <span class="clearfix d-none d-sm-inline-block">@Localizer[@industry.PantryHeader]</span>
</a>